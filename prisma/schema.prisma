// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
      provider = "prisma-client"
      output   = "../generated/prisma"
}

datasource db {
      provider = "postgresql"
}

model User {
      id        String   @id @default(cuid())
      email     String   @unique
      name      String?
      fullName  String?
      createdAt DateTime @default(now())
      updatedAt DateTime @updatedAt

      // Core Gamification
      xp    Int @default(0)
      level Int @default(1)

      // Relations
      sessions FocusSession[]
      workLogs WorkLog[]
      tasks    Task[]
      habits   Habit[]
      traits   Trait[]
      timers   Timer[]
}

model Trait {
      id     String @id @default(cuid())
      userId String
      user   User   @relation(fields: [userId], references: [id])

      name    String
      mastery String
      level   Int    @default(1)
}

model Timer {
      id     String @id @default(cuid())
      userId String
      user   User   @relation(fields: [userId], references: [id])

      name      String
      duration  Int
      type      String   @default("FOCUS")
      color     String   @default("bg-blue-500")
      createdAt DateTime @default(now())

      alarmSoundId String?
      alarmSound   AlarmSound? @relation(fields: [alarmSoundId], references: [id])

      sessions FocusSession[]
}

model AlarmSound {
      id        String   @id @default(cuid())
      userId    String? // Optional: System sounds have null userId
      name      String
      url       String
      isCustom  Boolean  @default(false)
      createdAt DateTime @default(now())

      timers Timer[]
}

model FocusSession {
      id     String @id @default(cuid())
      userId String
      user   User   @relation(fields: [userId], references: [id])

      timerId String?
      timer   Timer?  @relation(fields: [timerId], references: [id])

      startTime DateTime
      endTime   DateTime?
      duration  Int       @default(0) // in seconds

      status    String   @default("COMPLETED") // COMPLETED, ABORTED, ACTIVE
      createdAt DateTime @default(now())
}

model WorkLog {
      id     String @id @default(cuid())
      userId String
      user   User   @relation(fields: [userId], references: [id])

      hours Float
      type  String // "WASTE" or "WORK"
      date  DateTime @default(now())
}

model Task {
      id     String @id @default(cuid())
      userId String
      user   User   @relation(fields: [userId], references: [id])

      title       String
      isCompleted Boolean   @default(false)
      dueDate     DateTime?
      createdAt   DateTime  @default(now())
}

model Habit {
      id     String @id @default(cuid())
      userId String
      user   User   @relation(fields: [userId], references: [id])

      name           String
      streak         Int        @default(0)
      completedDates DateTime[]
}
